# Environment Configuration
# Copy this file to .env and update the values

# Data paths
DATA_ROOT=./data
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
OUTPUT_DATA_PATH=./data/outputs

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Pattern generation
MIN_PATTERN_LENGTH=3
MAX_PATTERN_LENGTH=50
ENABLE_STOPWORD_FILTER=true

# Sampling
DIALOGUE_RATIO=0.5
SAMPLE_SIZE=1000
RANDOM_SEED=42

# Prodigy
PRODIGY_DB=phonetics_anno
PRODIGY_LABELS=PHONETIC,DIALECT,SLANG
PRODIGY_MODEL=en_core_web_sm

# Processing
BATCH_SIZE=1000
MAX_WORKERS=4
